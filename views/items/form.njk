<form class="ui form item">

  <div class="field">
    <label>Nome</label>
    <input type="text" name="name">
  </div>

  <div class="required field">
    <label>Valor</label>
    <input id="value" type="text" name="value">
  </div>

  <div class="required grouped fields">
    <label>Tipo de lançamento</label>
    <div class="inline field">
      <div class="ui toggle checkbox">
        <input type="radio" name="type" value="CONTA" tabindex="0" class="hidden">
        <label>Conta</label>
      </div>
    </div>
    <div class="inline field">
      <div class="ui toggle checkbox">
        <input type="radio" name="type" value="RECEBIMENTO" tabindex="0" class="hidden">
        <label>Recebimento</label>
      </div>
    </div>
  </div>

  <div class="field">
    <label>Data do Lançamento</label>
    <input type="date" name="date">
  </div>

  <div class="field">
    {% include "./categories.njk" %}
  </div>

  <div class="ui submit button">Lançar</div>
  <div class="ui clear button">Limpar</div>
</form>